<div class="row">
  <div class="col-md-6">
    <table class="table table-striped table-condensed">
      <thead>
      <th></th>
      <th>Deposit Amount</th>
      <th>Date Completed</th>
      </thead>
      <% @plan.payments.sort_by(&:inc).each do |payment| %>
        <tr class="<%= 'success' if payment.complete %>">
          <td><%= link_to 'Mark Payment Complete', payment_url(payment), method: :put, class: 'btn btn-default btn-xs' unless payment.complete %></td>
          <td>$<%= payment.amount %></td>
          <td><%= payment.payment_date %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>