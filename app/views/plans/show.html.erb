<div class="row">
  <div class="col-md-5">
    <table class="table table-striped table-condensed table-payment">
      <thead>
      <th></th>
      <th>Deposit Amount</th>
      <th>Date Completed</th>
      </thead>
      <% @plan.payments.where('inc < 27').sort_by(&:inc).each do |payment| %>
        <tr class="<%= 'success' if payment.complete %>">
          <td><%= link_to 'Deposit', payment_url(payment), method: :put, class: 'btn btn-default btn-xs' unless payment.complete %></td>
          <td>$<%= payment.amount %></td>
          <td><%= payment.payment_date %></td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="col-md-5 col-md-offset-1">
    <table class="table table-striped table-condensed table-payment">
      <thead>
      <th></th>
      <th>Deposit Amount</th>
      <th>Date Completed</th>
      </thead>
      <% @plan.payments.where('inc > 26').sort_by(&:inc).each do |payment| %>
        <tr class="<%= 'success' if payment.complete %>">
          <td><%= link_to 'Deposit', payment_url(payment), method: :put, class: 'btn btn-default btn-xs' unless payment.complete %></td>
          <td>$<%= payment.amount %></td>
          <td><%= payment.payment_date %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>